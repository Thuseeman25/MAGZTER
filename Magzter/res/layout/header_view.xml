<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/header_background_color"
    android:orientation="vertical" >
    
	<ImageView 
	    android:id="@+id/side_menu_button"
	    android:layout_width="42.75px"
	    android:layout_height="42.75px"
	    android:layout_marginLeft="20dp"
	    android:layout_centerVertical="true"
	    android:src="@drawable/side_menu_button"/>
	
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="fill_parent"
	    android:layout_alignParentRight="true"
		android:orientation="horizontal">
	    
	    <ImageView 
	        android:id="@+id/catalogue_button"
	        android:layout_width="42.75px"
	        android:layout_height="42.75px"
	        android:layout_gravity="center_vertical"
	        android:layout_marginRight="30dp"
	        android:src="@drawable/cataloue_button"/>
	    
	    <ImageView 
	        android:id="@+id/nearby_button"
	        android:layout_width="42.75px"
	        android:layout_height="42.75px"
	        android:layout_gravity="center_vertical"
	        android:layout_marginRight="30dp"
	        android:src="@drawable/nearby_button"/>
	    
	    <ImageView 
	        android:id="@+id/search_button"
	        android:layout_width="42.75px"
	        android:layout_height="42.75px"
	        android:layout_gravity="center_vertical"
	        android:layout_marginRight="30dp"
	        android:src="@drawable/search_button"/>
	</LinearLayout>
	<TextView 
	    android:id="@+id/title_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/pure_white"
	    android:textSize="9pt" 
	    android:layout_centerInParent="true"
	    android:visibility="gone"
	    android:text="CATALOGUE"/>
</RelativeLayout>